@model IEnumerable<Lab8.Models.Product>

<h2>Product List</h2>

<!-- Відображення у вигляді списку -->
<ul>
    @foreach (var product in Model)
    {
        <li>@product.ID. @product.Name – @product.Price$ (@product.CreatedDate.ToShortDateString())</li>
    }
</ul>

<!-- Відображення у вигляді таблиці -->
<h2>Product Table</h2>
<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Created Date</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ID</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.CreatedDate.ToShortDateString()</td>
        </tr>
    }
</table>
